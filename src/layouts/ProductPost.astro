---
import { Debug } from 'astro/components';

import ProductCard from "@components/ProductCard.astro";
import MainLayout from '@layouts/MainLayout.astro';
import TagList from '@components/TagList.astro';

const { data: { name, id, slug, image, postImageSize, shopImageSize, price, description, imageSliderOne, imageSliderTwo, imageSliderThree, imageSliderFour, imageSliderFive, category, color, care } } = Astro.props;
const tags = [...color, ...category, ...care];
---

<!-- <Debug answer={Astro.props.data} /> -->

<MainLayout>
	<ProductCard 
		name={name}
		id={id}
		slug={slug}
		price={price}
		description={description}
		postImageSize={postImageSize}
		shopImageSize={shopImageSize}
		image={image}
		imageSliderOne={imageSliderOne}
		imageSliderTwo={imageSliderTwo}
		imageSliderThree={imageSliderThree}
		imageSliderFour={imageSliderFour}
		imageSliderFive={imageSliderFive}
		tags={tags}
	/>
</MainLayout>