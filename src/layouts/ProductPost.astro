---
import ProductCard from "@components/ProductCard.astro";
import MainLayout from '@layouts/MainLayout.astro';

const { data: { name, id, slug, image, postImageSize, shopImageSize, price, description, imageSliderOne, imageSliderTwo, imageSliderThree, imageSliderFour, imageSliderFive } } = Astro.props;
---

<MainLayout>
	<ProductCard 
		name={name}
		id={id}
		slug={slug}
		price={price}
		description={description}
		postImageSize={postImageSize}
		shopImageSize={shopImageSize}
		image={image}
		imageSliderOne={imageSliderOne}
		imageSliderTwo={imageSliderTwo}
		imageSliderThree={imageSliderThree}
		imageSliderFour={imageSliderFour}
		imageSliderFive={imageSliderFive}
	/>
</MainLayout>