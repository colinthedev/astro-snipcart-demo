---
import ProductCard from "../components/ProductCard.astro";
import MainLayout from './Layout.astro';

export interface Props {
	name?: string;
	id?: number;
	image?: string;
	price?: string;
	description?: string;
	imageSliderOne?: string;
	imageSliderTwo?: string;
	imageSliderThree?: string;
	imageSliderFour?: string;
}
const { name, id, image, price, description, imageSliderOne, imageSliderTwo, imageSliderThree, imageSliderFour } = Astro.props;
---

<MainLayout>
	<ProductCard 
		name={name}
		id={id}
		image={image}
		price={price}
		description={description}
		imageSliderOne={imageSliderOne}
		imageSliderTwo={imageSliderTwo}
		imageSliderThree={imageSliderThree}
		imageSliderFour={imageSliderFour}
	/>
</MainLayout>