---
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'

const {title} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width">
		<title>{title}</title>

		<link rel="icon" type="image/x-icon" href="/favicon.ico" />

		<link rel="prefetch" href="/assets/images/bg-img/homebg.jpeg" />
		<link rel="prefetch" href="http://localhost:4322/assets/images/bg-img/homebg.jpeg" />

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" 	integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

		<style is:global>
			@import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
		</style>

		<!-- <link rel="stylesheet" type="text/css" href="style.css"> -->
		<link rel="stylesheet" type="text/css" href="/styles/global.css">

	</head>

	<body class="d-flex flex-column">
		<!-- https://easyplant.com/ -->
		<Header />
		<slot />
		<div class="mb-5"></div>
		<Footer />
	</body>

	<script src="https://kit.fontawesome.com/bf56a5d9ca.js" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
	<script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"></script> 
</html>