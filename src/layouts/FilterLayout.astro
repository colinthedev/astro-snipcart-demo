---
import MainLayout from '@layouts/MainLayout.astro';
import ShopSidebar from '@components/ShopSidebar.astro';
import SidebarButton from '@components/ToggleSidebarButton.astro';
---

<MainLayout>	
	<div class="row">
		<ShopSidebar />
		<section class="product-wrapper position-relative col-12 col-sm-6 col-md-4 col-lg-3 d-flex flex-column align-items-start flex-grow-1 mb-5 px-2 px-lg-3">
			<div class="d-flex flex-column align-items-center mb-2 mb-md-4">
				<SidebarButton />
			</div>
			<slot /> <!-- Product map -->
		</section>
	</div>
</MainLayout>