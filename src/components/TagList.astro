---
const { tags, align } = Astro.props;
const tagsSorted = tags ? tags.sort() : [];
const ulAlignment = align ? align : "start";
---

<ul class={`text-${ulAlignment}`}>
	{tagsSorted.map((tag: String) => ( <li><a href={`/products/tag/${tag}/`} class="badge tag-badge">#{tag}</a></li>))}
</ul>

<style>
	ul {
		margin-bottom: 0 !important;
		padding-left: 0 !important;
		display: flex;
		flex-wrap: wrap;
		justify-content: stretch;
	}

	li {
		padding: .25rem;
	}

	.tag-badge {
		font-size: 1.4rem;
		color: #000;
		padding: .75rem;
		background-color: rgb(246, 246, 246);
		border-radius: 10px;
		text-decoration: none;
		margin-top: .75rem;
	}

	a:hover {
		color: #224229;
	}
</style>
