---
const { tags, align } = Astro.props;
const tagsSorted = tags ? tags.sort() : [];
const ulAlignment = align ? align : "start";
---

<ul class={`text-${ulAlignment}`}>
	{tagsSorted.map((tag: String) => ( <li><a href={`/products/tag/${tag}/`} class="badge">#{tag}</a></li>))}
</ul>

<style>
	ul {
		margin-bottom: 0;
		padding-left: 0;
	}

	li {
		display: inline-block;
	}

	.badge {
		font-size: 1.4rem;
		color: #000;
		padding: .75rem !important;
		background-color: rgb(246, 246, 246);
		border-radius: 10px;
	}

	a:hover {
		color: #fbb710;
	}

	li:not(:first-child) {
		margin-left: .75rem;
	}
</style>
