import ProductButton from '../components/ProductButton.astro';

const { image, imageSliderOne, imageSliderTwo, imageSliderThree, imageSliderFour, name, id, description, price, URL, nameOne, nameTwo, nameTwoOpt } = Astro.props;

if (typeof window !== 'undefined') {
	(function () {
