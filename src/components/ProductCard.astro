<style is:global>
	.product-card-wrapper { margin-top: 15rem; }

	.product-slider { overflow-x: scroll; padding: 5px 0;}

	.product-slider::-webkit-scrollbar { height: 8px; }
		
	.product-slider::-webkit-scrollbar-thumb { background-color: #fbb710; outline: 5px solid #fff; }

	.product-slider::-webkit-scrollbar-button:start:decrement,
	.product-slider::-webkit-scrollbar-button:end:increment {
		position: absolute;
		top: 0;
		display: block;
		height: 34px;
		width: 34px;
		background: #ccc;
		background-image: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/42863/arrow2.png);
		background-size: 100%;
	}

	.product-slider::-webkit-scrollbar-button:end:increment { background-image: url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/42863/arrow.png); }

	.product-slider--image {
		flex: 0 0 25%;
    min-width: 25%;
    height: 140px;
    background-position: center center;
    background-size: cover;
    cursor: pointer;
	}
	.product-slider--image:nth-last-child() { margin-right: 0; }

	.carousel-item--image {
		max-height: 562px;
		object-fit: cover;
	}

	.price-wrapper--bar {
		width: 100%;
		max-width: 80px;
		background-color: #fbb710;
		padding: 1.5px;
	}

	.price-wrapper--price {
		font-size: 24px;
    font-weight: 400;
    color: #fbb710;
    line-height: 1;
    margin-bottom: 10px;
	}

	.product-name {
		color: #242424;
    line-height: 1.3;
    font-weight: 400;
		font-size: 20px;
	}

	.product-info__reviews--stars {
		font-size: 10px;
    color: #fbb710;
	}

	.product-info__availability--icon {
		color: #20d34a;
    font-size: 12px;
	}

	.product-info--description {
		line-height: 2.1;
    color: #6b6b6b;
		font-size: 16px;
	}

	.AddCartBtn {
		width: 100%;
		max-width: 250px;
		display: inline-block;
    min-height: 55px;
    color: #ffffff;
    border: none;
    border-radius: 0;
    padding: 0 7px;
    font-size: 18px;
    line-height: 56px;
    background-color: #fbb710;
    font-weight: 400;
	}
</style>

<div class="col-12 col-md-9 flex-grow-0 flex-grow-md-1 product-card-wrapper">
	<div class="row">
		<div id="carouselExampleIndicators" data-bs-ride="carousel" data-bs-interval="false" class="carousel slide col-12 col-md-6 flex-grow-1 pb-5">
			<div class="carousel-inner">
				<div class="carousel-item item active">
					<img class="d-block w-100 carousel-item--image" src={image} alt="">
				</div>
				<div class="carousel-item item">
					<img class="d-block w-100 carousel-item--image" src={imageSliderOne} alt="">
				</div>
				<div class="carousel-item item">
					<img class="d-block w-100 carousel-item--image" src={imageSliderTwo} alt="">
				</div>
				<div class="carousel-item item">
					<img class="d-block w-100 carousel-item--image" src={imageSliderThree} alt="">
				</div>
				<div class="carousel-item item">
					<img class="d-block w-100 carousel-item--image" src={imageSliderFour} alt="">
				</div>
				<div class="carousel-item item">
					<img class="d-block w-100 carousel-item--image" src={imageSliderFive} alt="">
				</div>
			</div>
			<div class="product-slider pt-4 d-flex flex-nowrap justify-content-start">
				<button data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="border-0 p-2" aria-current="true" aria-label="Slide 0">
					<img style="object-fit: cover; left: 0; height: 120px" class="product-slider--image active" src={image} alt="">
				</button>
				<button data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" class="border-0 p-2" aria-current="true" aria-label="Slide 1">
					<img style="object-fit: cover; left: 0; height: 120px" class="product-slider--image" src={imageSliderOne} alt="">
				</button>
				<button data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 2" class="border-0 p-2">
					<img style="object-fit: cover; left: 115px; height: 120px" class="product-slider--image" src={imageSliderTwo} alt="">
				</button>
				<button data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 3" class="border-0 p-2">
					<img style="object-fit: cover; left: 230px; height: 120px" class="product-slider--image" src={imageSliderThree} alt="">
				</button>
				<button data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 4" class="border-0 p-2">
					<img style="object-fit: cover; left: 230px; height: 120px" class="product-slider--image" src={imageSliderFour} alt="">
				</button>
				<button data-bs-target="#carouselExampleIndicators" data-bs-slide-to="5" aria-label="Slide 5" class="border-0 p-2">
					<img style="object-fit: cover; left: 230px; height: 120px" class="product-slider--image" src={imageSliderFive} alt="">
				</button>
			</div>
		</div>
		<div class="col-11 col-md-5">
			<div class="price-wrapper">
				<div class="price-wrapper--bar"></div>
				<p class="price-wrapper--price py-3 m-0">{price}</p>
			</div>
			<a class="text-decoration-none" href={slug}>
				<h6 class="product-name m-0">{name}</h6>
			</a>
			<div class="product-info">
				<div class="d-flex justify-content-between py-3">
					<div class="product-info__reviews">
						<i class="product-info__reviews--stars fa fa-star"></i>
						<i class="product-info__reviews--stars fa fa-star"></i>
						<i class="product-info__reviews--stars fa fa-star"></i>
						<i class="product-info__reviews--stars fa fa-star"></i>
						<i class="product-info__reviews--stars fa fa-star"></i>
						<a class="product-info__reviews--review" href=""><p>Write a review</p></a>
					</div>
					<div class="product-info__reviews">
					</div>
				</div>
				<div class="product-info__availability d-flex">
					<i class="product-info__availability--icon fa fa-circle pe-2"></i>
					<p class="snipcart-items-count"></p><p> In stock</p>	
				</div>
				<p class="product-info--description">{description}</p>
			</div>
			<ProductButton 
				type="button"
				class="AddCartBtn snipcart-add-item mt-5"
				data-item-id={id}
				data-item-price={price}
				data-item-url={slug}
				data-item-name={name || title}
				data-item-image={image}
			/>
		</div>
	</div>
</div>

