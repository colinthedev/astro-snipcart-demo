---
import { Debug } from 'astro/components';

import { Image } from '@astrojs/image/components';
import ProductButton from '@components/ProductButton.astro';
import TagList from '@components/TagList.astro';

const { image, postImageSize, imageSliderOne, imageSliderTwo, imageSliderThree, imageSliderFour, imageSliderFive, name, id, description, price, slug, title, tags, ...modifiersMap} = Astro.props;

console.log(title)
