<style is:global>

	.product-card-wrapper {
		margin-top: 15rem;
	}

	.product-slider {
		overflow-x: scroll;
	}
	.product-slider--image {
		flex: 0 0 25%;
    width: 25%;
    min-width: 25%;
    height: 140px;
    background-position: center center;
    background-size: cover;
    border: 2px solid transparent;
    cursor: pointer;
		margin-right: 15px;
	}
	.product-slider--image:nth-last-child() {
		margin-right: 0;
	}
	.price-wrapper--bar {
		width: 100%;
		max-width: 80px;
		background-color: #fbb710;
		padding: 1.5px;
	}
	.price-wrapper--price {
		font-size: 24px;
    font-weight: 400;
    color: #fbb710;
    line-height: 1;
    margin-bottom: 10px;
	}
	.product-name {
		color: #242424;
    line-height: 1.3;
    font-weight: 400;
		font-size: 20px;
	}
	.product-info__reviews--stars {
		font-size: 10px;
    color: #fbb710;
	}
	.product-info__availability--icon {
		color: #20d34a;
    font-size: 12px;
	}
	.product-info--description {
		line-height: 2.1;
    color: #6b6b6b;
		font-size: 16px;
	}
	.AddCartBtn {
		width: 100%;
		max-width: 250px;
		display: inline-block;
    min-height: 55px;
    color: #ffffff;
    border: none;
    border-radius: 0;
    padding: 0 7px;
    font-size: 18px;
    line-height: 56px;
    background-color: #fbb710;
    font-weight: 400;
	}

</style>

<div class="col-12 col-md-9 flex-grow-0 flex-grow-md-1 product-card-wrapper">
	<div class="row">
		<div class="col-12 col-md-6 flex-grow-1 pb-5">
			<img class="d-block w-100" src={image} alt="">
			<div class="product-slider pt-4">
				<ol id="horizontalScroll" class="list-unstyled d-flex">
					<li data-slide-to="0" class="product-slider--image">
						<img style="object-fit: cover;" class="h-100 w-100" src={imageSliderOne} alt="">
					</li>
					<li data-slide-to="1" class="product-slider--image">
						<img style="object-fit: cover;" class="h-100 w-100" src={imageSliderTwo} alt="">
					</li>
					<li data-slide-to="2" class="product-slider--image">
						<img style="object-fit: cover;" class="h-100 w-100" src={imageSliderThree} alt="">
					</li>
					<li data-slide-to="3" class="product-slider--image">
						<img style="object-fit: cover;" class="h-100 w-100" src={imageSliderFour} alt="">
					</li>
				</ol>	
			</div>
		</div>
		<div class="col-11 col-md-5">
			<div class="price-wrapper">
				<div class="price-wrapper--bar"></div>
				<p class="price-wrapper--price py-3 m-0">{price}</p>
			</div>
			<a class="text-decoration-none" href={URL}>
				<h6 class="product-name m-0">{name}</h6>
			</a>
			<div class="product-info">
				<div class="d-flex justify-content-between py-3">
					<div class="product-info__reviews">
						<i class="product-info__reviews--stars fa fa-star"></i>
						<i class="product-info__reviews--stars fa fa-star"></i>
						<i class="product-info__reviews--stars fa fa-star"></i>
						<i class="product-info__reviews--stars fa fa-star"></i>
						<i class="product-info__reviews--stars fa fa-star"></i>
					</div>
					<div class="product-info__reviews">
						<a class="product-info__reviews--review" href=""><p>Write a review</p></a>
					</div>
				</div>
				<div class="product-info__availability d-flex">
					<i class="product-info__availability--icon fa fa-circle pe-2"></i>
					<p class="">In stock</p>	
				</div>
				<p class="product-info--description">{description}</p>
			</div>
			<ProductButton 
				type="button"
				class="AddCartBtn mt-5"
				children="Add To Cart"
			/>
		</div>
	</div>
</div>

