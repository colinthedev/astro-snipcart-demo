<div class="col-12 col-md-10 flex-grow-0 flex-grow-md-1 mt-1 mt-md-5">
	<div class="row">
		<div id="carouselExampleIndicators" data-bs-ride="carousel" data-bs-interval="false" class="carousel slide col-12 col-md-6 flex-grow-1 pb-5">
			<div class="carousel-inner">
				<div class="carousel-item item active">
					<Image class="product-image d-block" src={image} width={postImageSize[0]} height={postImageSize[1]} fit="cover" position="center" formats="webp" alt="" />
				</div>
				<div class="carousel-item item">
					<Image class="product-image d-block" src={imageSliderOne} width={postImageSize[0]} height={postImageSize[1]} fit="fill" position="center" formats="webp" alt="" />
				</div>
				<div class="carousel-item item">
					<Image class="product-image d-block" src={imageSliderTwo} width={postImageSize[0]} height={postImageSize[1]} fit="fill" position="center" formats="webp" alt="" />
				</div>
				<div class="carousel-item item">
					<Image class="product-image d-block" src={imageSliderThree} width={postImageSize[0]} height={postImageSize[1]} fit="fill" position="center" formats="webp" alt="" />
				</div>
				<div class="carousel-item item">
					<Image class="product-image d-block" src={imageSliderFour} width={postImageSize[0]} height={postImageSize[1]} fit="fill" position="center" formats="webp" alt="" />
				</div>
				<div class="carousel-item item">
					<Image class="product-image d-block" src={imageSliderFive} width={postImageSize[0]} height={postImageSize[1]} fit="fill" position="center" formats="webp" alt="" />
				</div>
			</div>
			<div class="product-slider pt-4 d-flex flex-nowrap justify-content-start flex-grow-1">
				<button data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="border-0 p-2" aria-current="true" aria-label="Slide 0">
					<img style="object-fit: cover; left: 0; height: 120px; width: 120px;" class="product-slider--image active" src={image} alt="">
				</button>
				<button data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" class="border-0 p-2" aria-current="true" aria-label="Slide 1">
					<img style="object-fit: cover; left: 0; height: 120px; width: 120px;" class="product-slider--image" src={imageSliderOne} alt="">
				</button>
				<button data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 2" class="border-0 p-2">
					<img style="object-fit: cover; left: 115px; height: 120px; width: 120px;" class="product-slider--image" src={imageSliderTwo} alt="">
				</button>
				<button data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 3" class="border-0 p-2">
					<img style="object-fit: cover; left: 230px; height: 120px; width: 120px;" class="product-slider--image" src={imageSliderThree} alt="">
				</button>
				<button data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 4" class="border-0 p-2">
					<img style="object-fit: cover; left: 230px; height: 120px; width: 120px;" class="product-slider--image" src={imageSliderFour} alt="">
				</button>
				<button data-bs-target="#carouselExampleIndicators" data-bs-slide-to="5" aria-label="Slide 5" class="border-0 p-2">
					<img style="object-fit: cover; left: 230px; height: 120px; width: 120px;" class="product-slider--image" src={imageSliderFive} alt="">
				</button>
			</div>
		</div>
		<div class="col-12 col-md-5 flex-grow-2">
			<div class="price-wrapper">
				<div class="price-wrapper--bar"></div>
				<p class="price-wrapper--price py-3 m-0">{price}</p>
			</div>
			<a class="text-decoration-none" href={'/products/' + slug + '/'}>
				<h6 class="product-name m-0">{name}</h6>
			</a>
			<div class="product-info">
				<div class="d-flex flex-column pt-3">
					<div class="product-info__reviews">
						<i class="product-info__reviews--stars fa fa-star"></i>
						<i class="product-info__reviews--stars fa fa-star"></i>
						<i class="product-info__reviews--stars fa fa-star"></i>
						<i class="product-info__reviews--stars fa fa-star"></i>
						<i class="product-info__reviews--stars fa fa-star"></i>
						<a class="product-info__reviews--review" href=""><p class="my-2">Write a review</p></a>
					</div>
					<a class="product-info__reviews--review" href=""><p class="mb-0">Reviews</p></a>
				</div>
				<div class="pb-3">{tags && <TagList {tags} />}</div>
				<div class="product-info__availability d-flex">
					<i class="product-info__availability--icon fa fa-circle pe-2"></i>
					<p class="snipcart-items-count"></p><p class="ms-1">In Stock</p>
				</div>
				<p class="product-info--description">{description}</p>
			</div>
			<ProductButton 
				type="button"
				class="AddCartBtn snipcart-add-item mt-5"
				data-item-id={id}
				data-item-price={price}
				data-item-url={slug}
				data-item-name={name || title}
				data-item-image={image}
			/>
		</div>
	</div>
</div>

<style>
	.product-image {
		height: 100%;
		width: 100%;
		/* max-height: 300px;
		max-width: 400px; */
		margin: auto
	}
	@media only screen and (min-width: 768px) {
		.product-image {
