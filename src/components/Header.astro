<script >
  document.getElementById("hamburger").addEventListener("click", function () {
    toggleMenu();
    //animateHamburger();
  });

  function toggleMenu() {
    var menu = document.getElementById("menu");
    if (menu.classList.contains("collapsed")) {
      menu.classList.remove("collapsed");
			menu.classList.add("expanded");
    } else if (menu.classList.contains("expanded")) {
      menu.classList.remove("expanded");
      menu.classList.add("collapsed");
    }
  }

  function animateHamburger() {
    var hamburger = document.getElementById("hamburger");
    hamburger.classList.toggle("active");
  }

  var menuElement = document.getElementById("menu");
  var menuItems = Array.from(document.querySelectorAll("#menu li")) as HTMLLIElement[];
  var animationDelay = .15; // Delay between each menu item animation

  function animateMenuItems() {
    menuItems.forEach(function(item, index) {
      item.style.animation = `expandAnimation 0.5s forwards ${index * animationDelay}s`; // Change animation time
    });
  }

  function resetMenuItems() {
    menuItems.forEach(function(item) {
      item.style.animation = "";
    });
  }

  menuElement.addEventListener("transitionend", function() {
    if (menuElement.classList.contains("expanded")) {
      //animateMenuItems();
    } else if (menuElement.classList.contains("collapsed")) {
      resetMenuItems();
    }
  });
</script>

