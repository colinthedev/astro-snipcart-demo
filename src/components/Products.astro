---

interface Frontmatter {
	// productOne: any; // Access individual properties
	image: string;
	name: string;
	id: string;
	price: number; 
	URL: string;
}
const allPosts = await Astro.glob<Frontmatter>('../data/items/*.json'); // To create a component
// const allPosts = await Astro.glob<Frontmatter>('../data/items/together.json'); // Access individual properties

---

<style>

	.main-product-image {
		max-width: 400px;
		width: 100%;
		margin-bottom: 1.5rem;
	}

</style>

<div class="col-6">
	<div class="container">
		<div class="row">
			{allPosts.map(post => 
					<div class="col-3 mb-5">
						<img class="main-product-image" src={post.image} alt="">	
						<div class="price-wrapper">
							<div class="price-wrapper--bar"></div>
							<p class="price-wrapper--price py-3 m-0">{post.price}</p>
						</div>
						<a class="text-decoration-none" href={post.URL}>
							<h6 class="product-name m-0">{post.name}</h6>
						</a>
					</div>
			)}
		</div>
	</div>
</div>