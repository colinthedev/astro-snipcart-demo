---
const { page } = Astro.props
---

<section class="d-flex space-x-8 justify-content-center justify-content-md-start text-xl pt-16 font-bold">
  {page.url.prev && <a href={page.url.prev} class="mr-8" data-test="paginator-prev"> <span class="squiggle">&larr;</span> Prev </a>}

  {page.url.next && <a href={page.url.next} data-test="paginator-next"> Next<span class="squiggle">&rarr;</span> </a>}
</section>

<style is:global>
	.pt-16 {
		font-size: 18px;
	}

	a {
		color: #242424;
		text-decoration: underline;
		text-underline-offset: 2px;
	}

	a:hover {
		color: #fbb710;
	}

	a:not(:last-child) {
		margin-right: 15px;
	}
</style>