---
import MainLayout from '@layouts/MainLayout.astro';
import CTACard from '@components/CTACard.astro';
import HeroCard from '@components/HeroCard.astro';
---

<style>
	.hero-bg {
		display: grid;
		background-image: linear-gradient(rgb(0 0 0 / 10%), rgb(0 0 0 / 40%)), url("/assets/images/bg-img/homebg.jpeg");
		background-repeat: no-repeat;
		background-size: cover;
		grid-auto-columns: 100%;
		height: auto;
		min-height: 800px;
		border-right: 10px solid #224127;
    border-bottom: 15px solid #224127;
    margin-top: 25px;
		color: #fff;
	}
	.hero-intro-wrapper {
		padding: 15rem 0 0 7rem;
	}
	.hero-title {
		position: relative;
		font-size: 6rem;
    font-weight: 900;
    color: var(--brand-green);
		z-index: 100;
	}
	.hero-title > span {
		font-size: 6.5rem;
		padding-right: .75rem;
	}
	.hero-title::before {
    content: " ";
    position: absolute;
		top: 0px;
    left: -40px;
    width: 130px;
    height: 130px;
    border-radius: 50%;
    border: 5px solid var(--brand-green);
    background-color: #fff;
    z-index: -1;
	}
	.hero-description {
		font-size: 16px;
		font-weight: 500;
		max-width: 700px;
	}
	.border-bottom {
		border-bottom: 7px solid #dee2e699 !important;
	}
	@media only screen and (min-width: 1000px) {
		.hero-bg {
			border-radius: 25px 0 0 25px;
			background-image: linear-gradient(rgb(0 0 0 / 5%), rgb(0 0 0 / 22%)), url("/assets/images/bg-img/homebg.jpeg");
			color: #000;
			border-right: none;
			border-bottom: none;
			margin-top: 0;
		}
		.hero-bg-accent {
			position: absolute;
			right: -5%;
			height: 100%;
			background-color: var(--brand-green);
			z-index: -1;
			margin-top: 30px;
		}
	}
	@media only screen and (min-width: 1200px) {
		.border-bottom {
			width: 110vw;
		}
	}
</style>

<MainLayout>
	<div class="container mb-5 pb-5">
		<section class="row">
			<div class="hero-bg col-12 col-lg-7 col-xxl-8 flex-grow-1">
				<div class="hero-bg-accent col-12 col-lg-7 col-xxl-8 flex-grow-1"></div>
				<div class="hero-intro-wrapper">
					<h1 class="hero-title"><span>G</span>reen Haven</h1>
					<div class="border-bottom">
						<p class="hero-description mt-4">Welcome to Green Haven, a plant store that brings the refreshing beauty of nature to your home or office. Our carefully curated selection of indoor and outdoor plants, along with our expert advice and support, makes it easy for you to create your own green oasis. Our mission is to help you add life and vitality to any space. Come explore our store and discover the perfect plants to elevate your environment.</p>
					</div>
				</div>
			</div>	
		</section>
	</div>
	<div class="container-fluid position-relative py-5 mt-5 border-top">
		<div class="row">
			<div class="col-12">
				<h2 class="h2-style fc--dark pt-4 pb-5">The Best Indoor Plant For You!</h2>
			</div>
		</div>
		<section style="max-width: 1200px; margin: auto;" class="row">
			<CTACard 
				id="1"
				cardLink="/products/tag/palm"
				bgImage = '/assets/images/homepage/plant-size-small.webp'
				title = 'Small'
				description = 'Tiny but mighty! These pet-friendly plants like spider plants and Boston ferns add charm without any danger to your furry pals. Perfect for cozy corners and happy pets!'
			/>
			<CTACard 
				id="2"
				cardLink="/products/tag/fig"
				bgImage = '/assets/images/homepage/plant-size-medium.webp'
				title = 'Medium'
				description = 'Medium marvels! Figs like the Fiddle Leaf add lush vibes to your space. Theyâ€™re stylish and tend to keep pets at bay with their bitter taste. Perfect for a chic, pet-safe home!'
			/>
			<CTACard 
				id="3"
				cardLink="/products/tag/cactus"
				bgImage = '/assets/images/homepage/plant-size-large.webp'
				title = 'Large'
				description = "Go big or go home! Large succulents bring bold, minimal-care beauty to any room. Most are pet-friendly, so your space stays stunning and safe for all members of the family!"
			/>
		</section>
		<div class="home-accent"></div>
		<div class="home-accent home-accent--dark"></div>
	</div>
	<div class="container-fluid">
		<HeroCard 
			color="green"
			heading="Hand-Picked Premium Plant"
			description="We carefully select only the healthiest, most vibrant plants to ship from our greenhouse to your doorstep."
		/>
		<HeroCard 
			color="beige"
			flex_row_reverse="true"
			heading="A Gift That Lasts"
			description="The perfect gift that brightens every home with the beauty of nature"
		/>
	</div>
</MainLayout>

<style>
.home-accent {
	position: absolute;
	left: 0;
	bottom: 0;
	height: 300px;
	width: 100%;
	background-color: beige;
	z-index: -1;
}
.home-accent--dark {
	background-color: #0e1c15;
	height: 30px;
}
</style>