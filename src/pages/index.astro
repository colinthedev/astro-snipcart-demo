import { Debug } from 'astro/components';

import test from "../data/items/test.json";
import item2 from "../data/items/item2.json";

import Product from "../components/Product.astro";

// Get all the values from the json products
const allPosts = await Astro.glob('../data/items/*.json');

const json = JSON.stringify(
  allPosts.map((p) => {
    return {
      image: p.image,
      id: p.id,
      price: p.price,
      description: p.description,
      name: p.name,
      URL: p.URL,
      nameOne: p.nameOne,
      nameTwo: p.nameTwo,
      nameTwoOpt: p.nameTwoOpt,
    };
  })
)
